<UserControl
    x:Class="ProjetoApp.ProjetoAideView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProjetoApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Border
            x:Name="BackgroundBorder"
            Grid.ColumnSpan="2"
            Background="Black"
            CornerRadius="20"
            Opacity="0.7" />

        <TextBlock
            x:Name="ListeningText"
            Margin="20,10,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="12"
            Foreground="{StaticResource MainBackground}"
            Text="listening"
            Visibility="Collapsed" />
        <TextBlock
            x:Name="TextTextBlock"
            Margin="20,10,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="14"
            Foreground="{StaticResource BrandColorLight}" />

        <Image
            x:Name="Logo"
            Grid.Column="1"
            Source="ms-appx:///Assets/Square150x150Logo.scale-200.png" />
    </Grid>

</UserControl>